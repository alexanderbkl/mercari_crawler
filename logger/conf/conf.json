{
    "version": 1,
    "formatters":{
        "detailed": {
            "class": "logging.Formatter",
            "format": "%(asctime)s %(name)-15s %(levelname)-13s %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "detailed"
        },
        "file": {
            "class": "logging.FileHandler",
            "filename": "logger/log/info.log",
            "mode": "a",
            "formatter": "detailed"
        },
        "testfile": {
            "class": "logging.FileHandler",
            "filename": "logger/log/testfile.log",
            "level": "ERROR",
            "mode": "a",
            "formatter": "detailed"
        },
        "errors": {
            "class": "logging.FileHandler",
            "filename": "logger/log/errors.log",
            "mode": "a",
            "level": "ERROR",
            "formatter": "detailed"
        }
    },
    "loggers": {
        "testfile": {
            "handlers": ["testfile"]
        }
    },
    "root": {
        "level": "DEBUG",
        "handlers": ["console", "file", "errors"]
    }
}